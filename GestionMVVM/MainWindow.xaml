<Window x:Class="GestionMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionMVVM"
        mc:Ignorable="d"
        Title="Gestion Librairie" Height="800" Width="1350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="84" />

            <RowDefinition />
        </Grid.RowDefinitions>

        <Button Name="livres" Content="Livres" HorizontalAlignment="Left" Height="40" Margin="10,24,0,0" VerticalAlignment="Top" Width="247" Click="Livres_Click" FontWeight="UltraBold" FontSize="19"/>
        <Button Name="fournisseurs" Content="Fournisseurs" HorizontalAlignment="Left" Height="40" Margin="279,24,0,0" VerticalAlignment="Top" Width="246" Click="Fournisseur_Click" FontWeight="UltraBold" FontSize="19"/>
        <Button Name="commandes" Content="Commandes" HorizontalAlignment="Left" Height="40" Margin="547,24,0,0" VerticalAlignment="Top" Width="246" Click="Commandes_Click" FontWeight="UltraBold" FontSize="19"/>

        <Grid x:Name="grContent" Grid.Row="1"  />
        <Grid.Background>
            <ImageBrush ImageSource="/GestionMVVM;component/images/livres.png" Stretch="UniformToFill"/>
        </Grid.Background>


    </Grid>
</Window>
